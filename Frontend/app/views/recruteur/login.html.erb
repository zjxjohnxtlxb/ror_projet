 <% content_for :css do -%>
  <% stylesheet_link_tag 'candidat', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end -%>

<main>
    <div class="container">
        <header class='header'>
            <% flash.each do |type, msg| %>
                <div class="my-2 text-center alert alert-<%= type %>">
                    <%= msg %>
                </div>
            <% end %>
        </header>
        <%= form_with scope: :utilisateur, class: "main", method: :post, :url => { controller: "recruteur" , action: "login"} do |form| %>
            <div class='backgrounds'>
                <article class='backgrounds-logo'>
                    <div class='backgrounds-logo-texte'>Equipe, analyse & formation</div>
                </article>
                <article class='backgrounds-texte text-primary'>Connexion Ã  votre espace recruteur</article>
                <article class='backgrounds-inputs'>
                    <label for='adm' class='backgrounds-inputs-label'>Adresse mail</label>
                    <%= form.text_field :email, id: "adm", required: true %>
                    <label for='mdp' class='backgrounds-inputs-label'>Mot de passe</label>
                    <%= form.password_field :password, id: "mdp", required: true %>
                </article>
            </div>
            <article class='boutons'>
                <%= link_to "Pas de compte ?", {controller: "accueil", action: "inscript"}, class: "boutons-inscript" %>
                <%= form.submit "Connectez Vous", class: "bouttons-connexion" %>
            </article>
        <% end %>
        <footer class='footer'></footer>
    </div>
</main>